Defaults secure_path="{{ jupyterhub_default_conda_path }}/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# the command(s) the Hub can run on behalf of the above users without needing a password
# the exact path may differ, depending on how sudospawner was installed
Cmnd_Alias JUPYTER_CMD = {{ jupyterhub_sudospawner_bin }}

# actually give the Hub user permission to run the above command on behalf
# of the above users without prompting for a password
{{ jupyterhub_user }} ALL=(%{{ jupyterhub_group }}) NOPASSWD:JUPYTER_CMD